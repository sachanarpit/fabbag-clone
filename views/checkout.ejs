  CartSec();

  function applyPromo() {
    let promo = document.getElementById("promo").value;
    let totolPrice = document.getElementById("totolPrice");
    let orgPrice = totolPrice.value - 1;
    let promosec = document.getElementById("promosec");
    promosec.innerHTML = null;
    totolPrice.innerText = null;
    if (promo == "masai1") {
      totolPrice.innerText = 1;
      promosec.innerHTML = `<div class="text-success">
                <h6 class="my-0">Promo code</h6>
